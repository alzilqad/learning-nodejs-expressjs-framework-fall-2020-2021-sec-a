<!DOCTYPE html>
<html>
  <%- include('../header') %>

  <body>
    <div align="center">
      <form method="post">
        <fieldset>
          <legend><h2>Delete Scout</h2></legend>

          <table class="table table-condensed" style="width: 50%">
            <tr>
              <td>Title:</td>
              <td><%= place.title %></td>
            </tr>
            <tr>
              <td>Description:</td>
              <td><%= place.description %></td>
            </tr>
            <tr>
              <td>Country:</td>
              <td><%= place.country_name %></td>
            </tr>
            <tr>
              <td>History:</td>
              <td><%= place.history %></td>
            </tr>
            <tr>
              <td>Published by:</td>
              <td><%=name%></td>
            </tr>
            <tr>
              <td>Are sure? this can't be undone!</td>
              <td>
                <input type="submit" name="submit" value="Delete" />
              </td>
            </tr>
          </table>
        </fieldset>
      </form>
    </div>
  </body>

  <%- include('../footer') %>
</html>
